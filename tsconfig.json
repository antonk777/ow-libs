{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "baseUrl": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@overwolf",
    ],
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "@overwolf/types"
    ]
  },
  "include": [
    "src"
  ]
}
